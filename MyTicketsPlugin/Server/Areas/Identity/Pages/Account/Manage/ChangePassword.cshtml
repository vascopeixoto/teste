@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Alterar Palavra-Passe";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<div class="teste">
    <div class="container-login100 container-fluid">
        <form id="change-password-form" method="post" class="login100-form validate-form p-b-33 p-t-5">
            <div class="row" style="margin-top: 25px; align-items: center; justify-content: center;">
                <div class="circle col-3"><img class="imagem" src="/Identity/res/admin/images/log-png-icon-free-download-935689.png" alt="user"></div>
                <span class="login100-form-title col-7">
                    @ViewData["Title"]
                </span>
                <partial name="_StatusMessage" for="StatusMessage" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.OldPassword" placeholder="." class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.OldPassword" class="form-label">Palavra-Passe Atual</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.NewPassword" placeholder="." class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.NewPassword" class="form-label">Nova Palavra-Passe</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" placeholder="." class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar Palavra-Passe</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-lg btn-primary" style="width: 92%; margin:10px 0 20px 0;">Atualizar password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
