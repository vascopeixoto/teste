@page
@model EmailModel
@{
    ViewData["Title"] = "Alterar Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}
<div class="teste">
    <div class="container-login100 container-fluid">
        <form id="email-form" method="post" class="login100-form validate-form p-b-33 p-t-5">
            <div class="row" style="margin-top: 25px; align-items: center; justify-content: center;">
                <div class="circle col-3"><img class="imagem" src="/Identity/res/admin/images/log-png-icon-free-download-935689.png" alt="user"></div>
                <span class="login100-form-title col-7">
                    @ViewData["Title"]
                </span>
                <partial name="_StatusMessage" for="StatusMessage" />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating input-group" style="width: 92%;">
                    <input asp-for="Email" class="form-control" disabled />
                    <div class="input-group-append">
                        <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                    </div>
                    <label asp-for="Email" class="form-label"></label>
                </div>
            }
            else
            {
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" disabled />
                    <label asp-for="Email" class="form-label"></label>
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Enviar email de verificação</button>
                </div>
            }
            <div class="form-floating">
                <input asp-for="Input.NewEmail" class="form-control" placeholder="." autocomplete="email" aria-required="true" />
                <label asp-for="Input.NewEmail" class="form-label">Novo Email</label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" style="width: 92%; margin:10px 0 20px 0;" class="btn btn-lg btn-primary">Alterar email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
