@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="teste">
    <div class="container-login100 container-fluid">
        <form id="account" method="post" class="login100-form validate-form p-b-33 p-t-5">

            <div class="row" style="margin-top: 25px; align-items: center; justify-content: center;">
                <div class="circle col-3"><img class="imagem" src="/Identity/res/admin/images/log-png-icon-free-download-935689.png" alt="user"></div>
                <span class="login100-form-title col-7">
                    Entrar
                </span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" placeholder="." autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"><i class="fa fa-user"></i> Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" placeholder="." autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"><i class="fa fa-lock"></i> Palavra-Passe</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="as">
                <a id="forgot-password" asp-page="./ForgotPassword">Redefinir Palavra-Passe</a>
            </div>

            <div class="container-login100-form-btn m-t-10 text-center">
                <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-lg btn-responsive">Entrar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
